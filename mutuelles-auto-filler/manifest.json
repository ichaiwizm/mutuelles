{
  "manifest_version": 3,
  "name": "Mutuelles Auto-Filler",
  "version": "2.0",
  "description": "Extension de remplissage automatique pour les sites de mutuelles",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://*.swisslifeone.fr/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.swisslifeone.fr/*"],
      "js": [
        "services/swisslife/leads.js",
        "services/swisslife/utils.js",
        "services/swisslife/selectors.js", 
        "services/swisslife/actions.js",
        "services/swisslife/engine.js",
        "services/swisslife/main.js",
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "services/swisslife/*.json"
      ],
      "matches": ["https://*.swisslifeone.fr/*"]
    }
  ]
}