{
  "manifest_version": 3,
  "name": "Mutuelles Auto-Filler",
  "version": "2.0",
  "description": "Extension de remplissage automatique pour les sites de mutuelles",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://*.swisslifeone.fr/*",
    "https://*.alptis.fr/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.swisslifeone.fr/*",
        "https://*.alptis.fr/*"
      ],
      "js": [
        "shared/data-schema.js",
        "shared/field-types.js",
        "core/utils.js",
        "core/messaging.js",
        "core/engine.js",
        "ui/components.js",
        "services/service-registry.js",
        "services/swisslife/detector.js",
        "services/swisslife/transformer.js",
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "services/*/config.json",
        "services/*/leads.js"
      ],
      "matches": [
        "https://*.swisslifeone.fr/*",
        "https://*.alptis.fr/*"
      ]
    }
  ]
}